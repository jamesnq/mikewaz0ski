generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

enum BuyerPlatform {
  Discord
  Telegram
  Facebook
}

model Buyer {
  id              String            @id @map("_id")
  platform        BuyerPlatform
  buyerId         String
  username        String?
  BrawlCoinsOrder BrawlCoinsOrder[]

  @@unique([platform, id])
}

enum OrderStatus {
  Pending
  Completed
  Cancelled
}

model BrawlCoinsOrder {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  Buyer     Buyer       @relation(fields: [buyerId], references: [id])
  email     String
  pass      String
  status    OrderStatus @default(Pending)
  createdAt DateTime    @default(now())
  buyerId   String
}
